    <ReportSection id="proposal" type="Editable" name="Proposal" tooltip="Exchange Proposal" title="Exchange Proposal" blobSection="PROPOSAL" pagebreak="false">
        <ReportItem id="acronym" type="Text" blobItem="ACRONYM">
            <![CDATA[
                <table class='wikitable'>
                <tr>
                    <td valign='top' align='right'><b>Project Acronym:</b><br />
                        <small>(if project is funded by GlycoNet)</small>
                    </td>
                    <td valign='top'>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="title" type="Text" blobItem="TITLE">
            <![CDATA[
                <tr>
                    <td align='right'><b>Project Title:</b></td>
                    <td>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="theme" type="Radio" blobItem="THEME" orientation="vertical" options="Antimicrobials|Chronic diseases|Diabetes and obesity|Rare genetic diseases|Therapeutic proteins and vaccines">
            <![CDATA[
                <tr>
                    <td valign='top' align='right'><b>Theme:</b></td>
                    <td>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="start" type="Calendar" blobItem="START">
            <![CDATA[
                <tr>
                    <td align='right'><b>Start Date:</b></td>
                    <td>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="end" type="Calendar" blobItem="END">
            <![CDATA[
                <tr>
                    <td align='right'><b>End Date:</b></td>
                    <td>{$item}</td>
                </tr>
                </table>
            ]]>
        </ReportItem>
        <ReportItem id="description" type="Textarea" limit="750" rich="true">
            <![CDATA[
                <h2>Exchange Description</h2>
                <p><small>Describe the proposed exchange, addressing the overall project goals, your role in the project during the exchange, timelines, methodologies, and the benefits this exchange will provide to the groups involved. Please use <i>Journal of Biological Chemistry</i> style for references.</small></p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="figures" type="UploadPDF" blobItem="FIGURES" mimeType="application/pdf" fileSize="5">
            <![CDATA[
                <h2>Uploads</h2>
                <h3>Figures and schemes - <small>2 pages maximum</small></h3>
                <p>Upload as a single separate PDF document. Include legends below each figure or scheme.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="letter1" type="UploadPDF" blobItem="LETTER1" mimeType="application/pdf" fileSize="2">
            <![CDATA[
                <h3>Signed letter (1 page) of support from primary academic supervisor</h3>
                <p>Upload as a single separate PDF document.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="letter2" type="UploadPDF" blobItem="LETTER2" mimeType="application/pdf" fileSize="2">
            <![CDATA[
                <h3>Signed letter of invitation (1 page) from host department or institution</h3>
                <p>Upload as a single separate PDF document.</p>
                {$item}
            ]]>
        </ReportItem>
