        </ReportItem>
        
        <!-- Lead Investigator -->
        <ReportItem id="lead" type="MultiTextReportItem" 
                              blobType="BLOB_ARRAY" 
                              blobItem="CAT_DESC_LEAD" 
                              multiple="true" 
