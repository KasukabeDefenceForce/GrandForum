        <ReportItem id="keywords" type="MultiTextReportItem" 
                                  blobType="BLOB_ARRAY" 
                                  blobItem="CAT_DESC_WORDS" 
                                  multiple="true" 
                                  labels="Key Word" 
                                  types="text"
