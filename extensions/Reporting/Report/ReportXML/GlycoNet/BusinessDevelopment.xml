        <Static>
            <![CDATA[
                </tbody>
                </table>
                <script type='text/javascript'>
                    $('#aboveTabs').hide();
                    $('#reportTabs').hide();
                    $('#bd_table').DataTable({
                        scrollX: true,
                        searching: false,
                        aLengthMenu: [
                            [25, 50, 100, 200, -1],
                            [25, 50, 100, 200, "All"]
                        ],
                        columnDefs: [
                           {type: 'natural', targets: 2}
                        ],
                        order: [[ 2, 'asc' ]],
                        iDisplayLength: -1
                    });
                    
                    $('select').change(function(){
                        var val = $(this).val();
                        if(val == "In Progress"){
                            $(this).closest("td").css("background-color", "blue");
                        }
                        else if(val == "Completed"){
                            $(this).closest("td").css("background-color", "green");
                        }
                        else {
                            $(this).closest("td").css("background-color", "");
                        }
                    });
                    $('select').change();
                </script>
                <style>
                    .dataTables_scrollBody thead {
                        opacity: 0;
                    }
                </style>
            ]]>
