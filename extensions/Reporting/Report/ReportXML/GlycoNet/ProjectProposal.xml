                {$item}
            ]]>
        </ReportItem>
        
        <!-- Other Investigators -->
        <ReportItem id="other" type="MultiTextReportItem" blobType="BLOB_ARRAY" blobItem="PROP_DESC_OTHER" multiple="true" labels="Name|Affiliation|Phone|E-Mail">
