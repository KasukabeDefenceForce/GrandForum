        <ReportItemSet type="ProjectPeople" role="Co-I">
            <Static>
                <![CDATA[
                    <li style="margin-top:0;">{$user_reversed_name}</li>
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                    </ul></td>
                </tr>
            ]]>
        </Static>
        <!-- Collaborators -->
        <Static>
            <![CDATA[
                <tr>
                    <td valign="top"><b>Collaborators:</b></td>
                    <td><ul>
            ]]>
