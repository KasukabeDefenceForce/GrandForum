<?xml version="1.0" encoding="UTF-8" ?>
<Report name="SSA Final Report" reportType="RP_SSA_FINAL_PROGRESS" ajax="true">
    <Permissions>
        <Role start="REPORTING_CYCLE_START" end="REPORTING_CYCLE_END" role="PL">
            <SectionPermission id="report" permissions="rw" />
            <SectionPermission id="institution" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="report" type="EditableReportSection" blobSection="SSA_REPORT" name="Final Report">
        <ReportItem id="instructions" type="StaticReportItem">
            <![CDATA[
                <p>For final funding to be released, the following conditions must be met by September 30, 2015:</p>
                <ul>
                    <li>this report must be completed, signed and received by TVN</li>
                    <li>the “Learning Plan” document you submitted at the time of application must be completed, signed and received by TVN</li>
                    <li>the SSA Exit Survey must be completed AFTER attendance of the 2015 TVN Annual Conference (September 27-29, 2015). The survey can be found at <a href='http://queensu.fluidsurveys.com/surveys/tvn/hqp-exit-survey/?TEST_DATA=' target='_blank'>Exit Survey</a></li>
                </ul>
                <i style='font-size:1.5em;'>To be completed by Supervisor</i>
            ]]>
        </ReportItem>
        <ReportItemSet id="students" type="PersonSupervisesReportItemSet">
            <ReportItem id="identity_head" type="StaticReportItem">
                <![CDATA[
                    <table class='wikitable'>
                        <tr>
                            <td style='width:150px;'><b>Student Last Name</b></td>
                            <td>{$user_last_name}</td>
                            <td style='width:150px;'><b>Student First Name</b></td>
                            <td>{$user_first_name}</td>
                        </tr>
                        <tr>
                            <td><b>Supervisor Last Name</b></td>
                            <td>{$my_last_name}</td>
                            <td><b>Supervisor First Name</b></td>
                            <td>{$my_first_name}</td>
                        </tr>
                    
                ]]>
            </ReportItem>
            <ReportItem id="start" type="CalendarReportItem" blobType="BLOB_TEXT" blobItem="SSA_START" blobSubItem="{$user_id}">
                <![CDATA[
                    <tr>
                        <td><b>Date student started working</b></td>
                        <td>{$item}</td>
                ]]>
            </ReportItem>
            <ReportItem id="end" type="CalendarReportItem" blobType="BLOB_TEXT" blobItem="SSA_END">
                <![CDATA[
                        <td><b>Date student finished working</b></td>
                        <td>{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="fulltime" type="RadioReportItem" options="Yes|No" orientation="horizontal" blobType="BLOB_TEXT" blobItem="SSA_TIME">
                <![CDATA[
                    <tr>
                        <td><b>Date student started working</b></td>
                        <td>{$item}
                ]]>
            </ReportItem>
            <ReportItem id="fulltime_no" type="TextReportItem" blobType="BLOB_TEXT" blobItem="SSA_NO">
                <![CDATA[
                        If no, # hours per week?<br />
                        {$item}
                    </td>
                ]]>
            </ReportItem>
            <ReportItem id="another" type="RadioReportItem" options="Yes|No" orientation="horizontal" blobType="BLOB_TEXT" blobItem="SSA_ANOTHER">
                <![CDATA[
                        <td><b>Would you supervise another summer student in future?</b></td>
                        <td>{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="identity_foot" type="StaticReportItem">
                <![CDATA[
                    </table>
                ]]>
            </ReportItem>
            <ReportItem id="achievements" type="TextareaReportItem" rich="true" height="400px" blobType="BLOB_TEXT" blobItem="SSA_ACHIEVEMENTS">
                <![CDATA[
                    <h3>Describe the student’s major research activities and related key achievements over this reporting period and if applicable, emphasize collaborative achievements.</h3>
                    {$item}
                ]]>
            </ReportItem>
            <ReportItem id="assessment_head" type="StaticReportItem">
                <![CDATA[
                    <h3>Please assess your student’s activities/project against the following</h3>
                    <table class='wikitable' width="650px">
                ]]>
            </ReportItem>
            <ReportItem id="priorities" type="RadioReportItem" options="Matching care to values|Empowering, engaging and supporting patients and their families/caregivers|Improving clinical outcomes|Improving care across the continuum" orientation="vertical" blobType="SSA_TEXT" blobItem="SSA_PRIORITIES">
                <![CDATA[
                    <tr>
                        <td width="50%" valign='top'>
                            <b>TVN Strategic Priorities</b> - Which ONE TVN strategic priority does your student’s activities/project most closely align with: 
                            <div style='margin-left:10px;'>{$item}</div>
                        </td>
                ]]>
            </ReportItem>
            <ReportItem id="themes" type="RadioReportItem" options="Improved end-of-life care/advance care planning|Improved acute/critical care|Optimization of community/residential care|Optimization of transitions of care" orientation="vertical" blobType="BLOB_TEXT" blobItem="SSA_THEMES">
                <![CDATA[
                        <td width="50%" valign='top'>
                            <b>TVN Research Themes</b> - Which ONE research theme does your student’s activities/project most closely align with:
                            <div style='margin-left:10px;'>{$item}</div>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="care" type="RadioReportItem" options="Palliative/EOL care|Acute/critical care in hospital|Long-term care facility|Home care|All settings of care" orientation="vertical" blobType="BLOB_TEXT" blobItem="SSA_CARE">
                <![CDATA[
                    <tr>
                        <td valign='top'>
                            <b>Setting of Care</b> - Which ONE setting of care does your student’s work that your project will most significantly impact:
                            <div style='margin-left:10px;'>{$item}</div>
                        </td>
                ]]>
            </ReportItem>
            <ReportItem id="impact" type="RadioReportItem" options="Patients, their families and informal caregivers/support systems (volunteer)|Health care professionals and caregivers (paid)|Health care facilities|Health care system" orientation="vertical" blobType="BLOB_TEXT" blobItem="SSA_IMPACT">
                <![CDATA[
                        <td valign='top'>
                            <b>Focus of Impact</b> - Highlight ONE primary focus of impact for your project:
                            <div style='margin-left:10px;'>{$item}</div>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="synth" type="TextReportItem" width="50px" blobType="BLOB_TEXT" blobItem="SSA_SYNTH">
                <![CDATA[
                    </table>
                    <table class="wikitable" width="650px">
                        <tr>
                            <td colspan='3'>
                                <b>Knowledge Activities</b> - Indicate the portion of your student’s activities/project that addresses the following activities on the knowledge continuum:
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {$item}% Knowledge synthesis
                            </td>
                ]]>
            </ReportItem>
            <ReportItem id="creation" type="TextReportItem" width="50px" blobType="BLOB_TEXT" blobItem="SSA_CREATION">
                <![CDATA[
                    <td>
                        {$item}% Knowledge creation
                    </td>
                ]]>
            </ReportItem>
            <ReportItem id="mobilization" type="TextReportItem" width="50px" blobType="BLOB_TEXT" blobItem="SSA_MOBILIZATION">
                <![CDATA[
                        <td>
                            {$item}% Knowledge mobilization
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="assessment_foot" type="StaticReportItem">
                <![CDATA[
                    </table>
                ]]>
            </ReportItem>
            <ReportItem id="institution" type="UploadReportItem" blobType="BLOB_RAW" blobItem="SSA_INSTITUTION" mimeType="application/pdf" fileSize="2">
                <![CDATA[
                    <i style='font-size:1.5em;'>To be completed by Host Institution</i>
                    <p>Download <a href='{$wgServer}{$wgScriptPath}/index.php/data/SSA Institution.doc'>SSA Institution Template</a> and have the student's institution fill out the form, and then upload it as a pdf.</p>
                    {$item}
                ]]>
            </ReportItem>
        </ReportItemSet>
    </ReportSection>
</Report>
