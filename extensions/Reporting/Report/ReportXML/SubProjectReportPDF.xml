        </ReportItem>
        <ReportItem id="current_goals" type="ProjectGoalsReportItem" year="{$this_year}" max="5">
            <![CDATA[<h2>This Year's Goals</h2>{$item}]]>
        </ReportItem>
        <ReportItem id="future_goals" type="ProjectGoalsReportItem" year="{$next_year}" max="5">
            <![CDATA[<h2>New Goals for Next Year</h2>{$item}]]>
        </ReportItem>
        <ReportItem id="sub_project_champs" width="100%" blobType="BLOB_TEXT" blobItem="SUB_SUBPROJECT_COMMENTS" type="AutoCompleteTextareaReportItem" limit="1200" set="ProjectChampionsReportItemSet" index="user_id" label="user_name" name="Champion" tooltipOptionId="Champion ID" tooltipOptionName="Champion Name">
            <![CDATA[<h2>General Comments</h2>{$item}]]>
        </ReportItem>
    </ReportSection>
</Report>
