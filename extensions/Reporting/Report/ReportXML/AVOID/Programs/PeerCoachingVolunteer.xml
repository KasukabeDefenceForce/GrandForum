<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Peer Coaching Volunteer" reportType="RP_VOLUNTEER_OPPORTUNITIES" ajax="true" disabled="false">
    <Permissions>
        <Role role="INACTIVE+"></Role>
    </Permissions>
    <ReportSection id="peer" tooltip="Peer Coaching" name="Peer Coaching" title="Peer Coaching" blobSection="PEER" type="NextPrevReportSection">
        <Static>
            <![CDATA[
                <script type="text/javascript">
                    $("#reportHeader").hide();
                    $("#reportHeader").next().hide();
                </script>
                <div style='overflow: auto;'>
                    <img src="{$wgServer}{$wgScriptPath}/skins/man3.png" style='float: right; height: 175px; transform: scaleX(-1);' />
                    <div style='display:flex; align-items: center;'>
                        <div class='program-header'>
                            PEER COACHING
                        </div>
                        <div class='program-text' style='min-width: 200px;'>
                            Provide support by telephone for approximately 30 minutes, once a week, for three months.
                        </div>
                    </div>
                    
                    <div style='display:flex; clear: both;'>
                        <div style='width:40%; padding-right:1em;'>
                            <span class='program-text'>Who can volunteer to coach?</span><br />
                            <p>Members of the AVOID Frailty for Healthy Aging Program are eligible to become Peer Coaches. Peer Coaches provide support in self-managing health through behaviour change and empowerment. This complements and enhances professional health care.</p>
                            <img src="{$wgServer}{$wgScriptPath}/skins/people3.png" style='float: right; height: 200px;' />
                            <p>Coaches do not provide medical/clinical advice or treatment.</p>
                            
                            <br />
                            <span class='program-text'>Benefits of coaching:</span><br />
                            <div class='program-box'>Learn facilitation skills</div><br />
                            <div class='program-box'>Share in other people’s successes</div><br />
                            <div class='program-box'>Learn techniques and strategies you can use in your own life</div>
                        </div>
                        <div style='width:60%; padding-left:1em;'>
                            <span class='program-text'>Favourable attributes of a Peer Coach include:</span><br />
                            <div class='program-box' style='display:flex;'>
                                <div style='width:50%;'>
                                    <ul>
                                        <li>Willing to listen, learn new skills, and be a healthy role model</li>
                                        <li>Non-judgmental and open to new ideas</li>
                                        <li>Committed to the philosophy of the program</li>
                                    </ul>
                                </div>
                                <div style='width:50%;'>
                                    <ul>
                                        <li>Responsible, respected, and trustworthy</li>
                                        <li>Committed to helping others</li>
                                        <li>Proficient in both speaking and reading English</li>
                                    </ul>
                                </div>
                            </div><br />
                            <p><span class="program-text">What’s required?</span> Successfully complete the 2-day, (8 hours total) training. Training is interactive and fun and provided at <b>no cost</b>.</p>
                            <p>Once trained, volunteers are asked to <b>commit to coaching a participant within 6 months</b>.</p>
                        
            ]]>
        </Static>
        <ReportItem id="register" type="Checkbox" labels="Complete and submit the Application Form to be a Peer Coach. After submitting the Application Form, you may be invited to participate in a personal telephone interview to assess suitability." options="Register" blobType="BLOB_ARRAY" blobItem="REGISTER">
            <![CDATA[
                <div class="program-button">
                    {$item}
                </div>
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                        </div>
                    </div>
                </div>
                <div id='register' style='display: none;'>
            ]]>
        </Static>
        <ReportItem id="name" type="Text" blobItem="NAME" blobType="BLOB_TEXT" width="250px" default="{$user_name}">
            <![CDATA[
                <table style="width:100%;">
                    <tr>
                        <td class="label required" style="width:1%;">Name:</td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="address" type="Text" blobItem="ADDRESS" blobType="BLOB_TEXT" width="250px">
            <![CDATA[
                    <tr>
                        <td class="label required">Mailing address:</td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="phone" type="Text" blobItem="PHONE" blobType="BLOB_TEXT" width="250px">
            <![CDATA[
                    <tr>
                        <td class="label required">Phone Number:</td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="email" type="Text" blobItem="EMAIL" blobType="BLOB_TEXT" width="250px" default="{$user_email}">
            <![CDATA[
                    <tr>
                        <td class="label required">Email:</td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="age" type="Text" blobItem="AGE" blobType="BLOB_TEXT" width="250px">
            <![CDATA[
                    <tr>
                        <td class="label required">Age:</td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="employment" type="Textarea" blobItem="EMPLOYMENT" blobType="BLOB_TEXT" width="100%" height="100px">
            <![CDATA[
                    <tr>
                        <td class="label">Employment Information:<br /><small>(if applicable)</small></td>
                        <td class="value">{$item}</td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="times" type="Checkbox" blobItem="TIMES" blobType="BLOB_ARRAY" options="Weekend|Weekdays|Evenings">
            <![CDATA[
                    <tr>
                        <td class="label">Preferred Training Times:</td>
                        <td class="value">{$item}</td>
                    </tr>
                </table>
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                    <h3>Communication Consent </h3>
                    <p>By providing your contact information you are consenting to receive communications from AVOID Frailty about your program selection. A member of our team will be in touch in a few business days.</p>
            ]]>
        </Static>
        <ReportItem id="submit" type="SubmitEmail">
            <![CDATA[
                <table>
                    <tr>
                        <td><b>Program:</b></td>
                        <td>Peer Coaching (Give Support)</td>
                    </tr>
                    <tr>
                        <td><b>User:</b></td>
                        <td>{$user_name} &lt;{$user_email}&gt;</td>
                    </tr>
                    <tr>
                        <td><b>Date Submitted:</b></td>
                        <td>{time2date({$timestamp})}</td>
                    </tr>
                    <tr>
                        <td><b>Name:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,NAME,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td><b>Mailing address:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,ADDRESS,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td><b>Phone Number:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,PHONE,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td><b>Email:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,EMAIL,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td><b>Age:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,AGE,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td valign="top"><b>Employment Info:</b></td>
                        <td>{getText(RP_VOLUNTEER_OPPORTUNITIES,PEER,EMPLOYMENT,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td valign="top"><b>Times:</b></td>
                        <td>{getArray(RP_VOLUNTEER_OPPORTUNITIES,PEER,TIMES,0,{$user_id},0,times}</td>
                    </tr>
                </table>
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                </div>
                <script type='text/javascript'>
                    $(".program-button").click(function(e){
                        var checkbox = $('input[type=checkbox]', this);
                        if($(e.target).not("input").length == 1){
                            $(checkbox).click();
                        }
                    });
                    
                    $(".program-button input").change(function(){
                        var checked = $(this).is(":checked");
                        if(checked){
                            $("#register").slideDown();
                        }
                        else {
                            $("#register").slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </Static>
    </ReportSection>
</Report>
