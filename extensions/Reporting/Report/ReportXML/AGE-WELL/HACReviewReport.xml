                                    <th></th>
                                    <th></th>
                                    <th style='display:none;'></th>
                                    <th></th>
                                    <th></th>
                                    <th style='display:none;'></th>
                                    <th></th>
                                    <th style='display:none;'></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                        </div>
                        <script type='text/javascript'>
                            $("#{$user_id}_table.wikitable").dataTable({'autoWidth': false,
                                                                        'dom': 'Blfrtip',
                                                                        'buttons': [
                                                                            {
                                                                                extend: 'excelHtml5',
                                                                                title: "{$user_name}"
                                                                            },
                                                                        ]});
                        </script>
                    ]]>
                </Static>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
