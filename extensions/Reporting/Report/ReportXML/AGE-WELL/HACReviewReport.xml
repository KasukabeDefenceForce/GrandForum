                            <td align='right' title='{replace(',&#39;,{getRawText(RP_HAC_REVIEW,REVIEW,REVIEW_1_COMMENTS,{$parent_id},{$user_id},0)})}'>
                                {getText(RP_HAC_REVIEW,REVIEW,REVIEW_1,{$parent_id},{$user_id},0)}
                            </td>
