                    <tr>
                        <td class="label tooltip required" title="Street Name and number"><span class='en'>Address Line 1</span><span class='fr'>Adresse (ligne 1)</span>:</td>
                        <td class="value" style="width:200px">{$item}</td>
                ]]>
            </ReportItem>
            <ReportItem id="email" type="Text" blobItem="EMAIL" encrypt="true">
                <![CDATA[
                        <td class="label required" style="width:1px;"><span class='en'>E-mail</span><span class='fr'>Courriel</span>:</td>
                        <td class="value">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="address2" type="Text" blobItem="ADDRESS2" optional="true" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label tooltip" title="House, Apt, Suite"><span class='en'>Address Line 2</span><span class='fr'>Adresse (ligne 2)</span>:</td>
                        <td class="value">{$item}</td>
                ]]>
            </ReportItem>
            <ReportItem id="phone" type="Text" blobItem="PHONE" encrypt="true">
                <![CDATA[
                        <td class="label tooltip required" title="Phone number of the individual"><span class='en'>Cellphone Number</span><span class='fr'>Numéro de cellulaire</span>:</td>
                        <td class="value">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="city" type="Text" blobItem="CITY" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label tooltip required" title="City"><span class='en'>City</span><span class='fr'>Ville</span>:</td>
                        <td class="value">{$item}</td>
                ]]>
            </ReportItem>
            <ReportItem id="contact_name" type="Text" blobItem="CONTACT_NAME" encrypt="true">
