                    <tr>
                        <td colspan="4"><h2><span class='en'>Other Obligations</span><span class='fr'>Autres obligations</span></h2></td>
                    </tr>
                ]]>
            </Static>
            <ReportItem id="enrolled" type="Radio" blobItem="ENROLLED" options="High School|College/Vocational School|University|Will Not Enroll"
                                      labels="&lt;span class='en'>High School&lt;/span>&lt;span class='fr'>École secondaire&lt;/span>|
                                              &lt;span class='en'>College/Vocational School&lt;/span>&lt;span class='fr'>Collège/école vocationnelle&lt;/span>|
