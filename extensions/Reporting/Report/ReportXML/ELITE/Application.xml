                    <tr>
                        <td class="label required"><span class='en'>Gender</span><span class='fr'>Genre</span>:</td>
                        <td class="value" colspan="3">{$item}
                            <script type='text/javascript'>
                                if(wgLang == 'fr'){
                                    $("select[name=ApplicationDemande_gender] option[value='Male']").text('Homme');
                                    $("select[name=ApplicationDemande_gender] option[value='Female']").text('Femme');
                                    $("select[name=ApplicationDemande_gender] option[value='Non-binary']").text('Non binaire');
                                    $("select[name=ApplicationDemande_gender] option[value='Other']").text('Autre');
                                    $("select[name=ApplicationDemande_gender] option[value='I prefer not to say']").text('Je préfère ne pas dire');
                                }
                            </script>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="ethnic" type="Radio" blobItem="ETHNIC" options="Black|White|Indigenous|South Asian|Chinese|Filipino|Arab|Southeast Asian|West Asian|Korean|Japanese|Other" 
                                    labels="&lt;span class='en'>Black&lt;/span>&lt;span class='fr'>Noir-e&lt;/span>|
                                            &lt;span class='en'>White&lt;/span>&lt;span class='fr'>Blanc-he&lt;/span>|
                                            &lt;span class='en'>Indigenous (North American, Central American, South American Indigenous peoples)&lt;/span>&lt;span class='fr'>Autochtone (Des peuples autochtones de l’Amérique du Nord, de l’Amérique Centrale, ou de l’Amérique du Sud)&lt;/span>|
                                            &lt;span class='en'>South Asian (e.g., East Indian, Pakistani, Sri Lankan, etc.)&lt;/span>&lt;span class='fr'>Asiatique du Sud (par ex. Indien-ne de l’Est, Pakistanais-e, Srilankais-e, etc.)&lt;/span>|
                                            &lt;span class='en'>Chinese&lt;/span>&lt;span class='fr'>Chinois-e&lt;/span>|
                                            &lt;span class='en'>Filipino&lt;/span>&lt;span class='fr'>Philippin-e&lt;/span>|
                                            &lt;span class='en'>Arab&lt;/span>&lt;span class='fr'>Arabe&lt;/span>|
                                            &lt;span class='en'>Southeast Asian (e.g., Vietnamese, Cambodian, Laotian, Thai, etc.)&lt;/span>&lt;span class='fr'>Asiatique du Sud-Est (par ex. Vietnamien-ne, Cambodgien-ne, Laotien-ne, Thaïlandais-e, etc.)&lt;/span>|
                                            &lt;span class='en'>West Asian (e.g., Iranian, Afghan, etc.)&lt;/span>&lt;span class='fr'>Asiatique de l’Ouest (par ex. Iranien-ne, Afghan-e, etc.)&lt;/span>|
                                            &lt;span class='en'>Korean&lt;/span>&lt;span class='fr'>Coréen-ne&lt;/span>|
                                            &lt;span class='en'>Japanese&lt;/span>&lt;span class='fr'>Japonais-e&lt;/span>|
                                            Other" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required"><span class='en'>Ethnic Group</span><span class='fr'>Groupe ethnique</span>:</td>
                        <td class="value" colspan="3">{$item}
                ]]>
            </ReportItem>
            <ReportItem id="ethnic_other" type="Text" blobItem="ETHNIC_OTHER" optional="true" placeholder="Other...">
                <![CDATA[
                            <div style="position: absolute; margin-top: -28px; margin-left: 24px;">
                                {$item}
                                <script type='text/javascript'>
                                    $('[name=ApplicationDemande_ethnic_other]').attr('placeholder', showLanguage(wgLang, "Other...", "Autre..."));
                                </script>
                            </div>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="language" type="Select" blobItem="LANGUAGE" options="French|English|Both" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required"><span class='en'>Official Languages</span><span class='fr'>Langues officielles</span>:</td>
                        <td class="value" colspan="3">{$item}
                            <script type='text/javascript'>
                                if(wgLang == 'fr'){
                                    $("select[name=ApplicationDemande_language] option[value='French']").text('Français');
                                    $("select[name=ApplicationDemande_language] option[value='English']").text('Anglais');
                                    $("select[name=ApplicationDemande_language] option[value='Both']").text('Les deux');
                                }
                            </script>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            
            <!-- Education -->
            <Static>
                <![CDATA[
                    <tr>
                        <td colspan="4"><h2><span class='en'>Education</span><span class='fr'>Éducation</span></h2></td>
                    </tr>
                ]]>
            </Static>
            <ReportItem id="education" type="Select" blobItem="EDUCATION" options="High school|Post-secondary|Transitioning from High School to Post secondary|Other" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required"><span class='en'>Education</span><span class='fr'>Éducation</span>:</td>
                        <td class="value" colspan="3">{$item}
                            <script type='text/javascript'>
                                if(wgLang == 'fr'){
                                    $("select[name=ApplicationDemande_education] option[value='High school']").text('École secondaire (lycée)');
                                    $("select[name=ApplicationDemande_education] option[value='Post-secondary']").text('École supérieure');
                                    $("select[name=ApplicationDemande_education] option[value='Transitioning from High School to Post secondary']").text('Transition du secondaire au postsecondaire');
                                    $("select[name=ApplicationDemande_education] option[value='Other']").text('Autre');
                                }
                            </script>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="enrollment" type="Select" blobItem="ENROLLMENT" options="High School|College/Vocational School|University|WILL NOT ENROLL" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required"><span class='en'>Enrollment in Fall</span><span class='fr'>Inscription en automne</span>:</td>
                        <td class="value" colspan="3"><span class='en'>Will you be enrolled in full-time studies at an academic institution (high school, college/vocational school, or university) in the Fall term?</span><span class='fr'>Serez-vous inscrit-e à temps plein dans un établissement d’enseignement (école secondaire, collège/école vocationnelle, ou l’université) lors de la session d’automne?</span>{$item}
