<?xml version="1.0" encoding="UTF-8" ?>
<Report name="ELITE Intern Application" reportType="RP_ELITE" pdfType="RPTP_ELITE" pdfFiles="ApplicationPDF" year="0" ajax="true" encrypt="true">
    <Permissions>
        <Role role="HQP">
            <SectionPermission id="profile" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <!-- Personal Information -->
    <ReportSection id="profile" type="EditableReportSection" blobSection="PROFILE" name="Application" title="ELITE Intern Application" showProgress="true">
        <Static>
            <![CDATA[
                <b>Welcome to the Intern Application Portal for the Experiential Learning in Innovation, Technology, and Entrepreneurship (ELITE) Program for Black Youth. Please read our Brochure for Interns before completing your application: <a href="https://www.eliteprogram.ca/program/" target="_blank">DOWNLOAD IT HERE</a>. Personal information submitted through this form will be held as confidential and will be stored, used, and disclosed only to the extent permitted by the Freedom of Information and Protection of Privacy Act, R.S.A. 2000, c. F-25 (as amended).</b>
            ]]>
        </Static>
        <If if="{==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},Requested More Info)}">
            <![CDATA[
                <div class="info">
                    <b>{getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)}</b><br />
                    {getText(RP_ELITE, PROFILE, COMMENTS, 0, {$user_id}, 0)}
                </div>
            ]]>
        </If>
        <Static>
            <![CDATA[
                <p>All items with a <span style="color:red;">*</span> require mandatory responses</p>
                <table>
                    <tr>
                        <td colspan="4"><h2 style="margin-top:0;">Personal Information</h2></td>
                    </tr>
            ]]>
        </Static>
        <ReportItem id="last_name" type="Text" blobItem="LAST_NAME" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required" style="width: 100px;">Last Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="first_name" type="Text" blobItem="FIRST_NAME" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">First Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="middle_name" type="Text" blobItem="MIDDLE_NAME" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Middle Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="birthdate" type="Calendar" blobItem="BIRTHDATE" yearRange="c-50:{$year}" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Date of Birth:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="gender" type="Select" blobItem="GENDER" options="Male|Female|Non-binary|Other|I prefer not to say" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Gender:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="ethnic" type="Checkbox" blobItem="ETHNIC" blobType="BLOB_ARRAY" options="Black|White|Indigenous|South Asian|Chinese|Filipino|Arab|Southeast Asian|West Asian|Korean|Japanese|Other" labels="Black|White|Indigenous (North American, Central American, South American Indigenous peoples)|South Asian (e.g., East Indian, Pakistani, Sri Lankan, etc.)|Chinese|Filipino|Arab|Southeast Asian (e.g., Vietnamese, Cambodian, Laotian, Thai, etc.)|West Asian (e.g., Iranian, Afghan, etc.)|Korean|Japanese|Other" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Ethnic Group:</td>
                    <td class="value" colspan="3">{$item}
            ]]>
        </ReportItem>
        <ReportItem id="ethnic_other" type="Text" blobItem="ETHNIC_OTHER" optional="true" placeholder="Other...">
            <![CDATA[
                        <div style="position: absolute; margin-top: -28px; margin-left: 24px;">{$item}</div>
                    </td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="language" type="Select" blobItem="LANGUAGE" options="French|English" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Official Languages:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Education -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Education</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="education" type="Select" blobItem="EDUCATION" options="High-school|Post-secondary|Transitioning from High School to Post secondary|Other" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Education:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="enrollment" type="Select" blobItem="ENROLLMENT" options="High School|College/Vocational School|University|WILL NOT ENROLL" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Enrollment in Fall:</td>
                    <td class="value" colspan="3">Will you be enrolled in full-time studies at an academic institution (high school, college/vocational school, or university) in the Fall term?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_name" type="Text" blobItem="INSTITUTION_NAME" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip required" title="Name of the educational institution">Institution Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_city" type="Text" blobItem="INSTITUTION_CITY" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">City:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_prov" type="Text" blobItem="INSTITUTION_PROV" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Province/State:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Contact Information -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Contact Information</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="address1" type="Text" blobItem="ADDRESS1" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip required" title="Street Name and number">Address Line 1:</td>
                    <td class="value" style="width:200px">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="email" type="Text" blobItem="EMAIL" encrypt="true">
            <![CDATA[
                    <td class="label required" style="width:1px;">E-mail:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="address2" type="Text" blobItem="ADDRESS2" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="House, Apt, Suite">Address Line 2:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="phone" type="Text" blobItem="PHONE" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Phone number of the individual">Cellphone Number:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="city" type="Text" blobItem="CITY" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip required" title="City">City:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="contact_name" type="Text" blobItem="CONTACT_NAME" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Name of the individual's emergency contact">Emergency Contact Name:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="prov" type="Text" blobItem="PROV" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip required" title="Province">Province/State:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="contact" type="Text" blobItem="CONTACT" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Phone number of the individual's emergency contact">Emergency Contact:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="zip" type="Text" blobItem="ZIP" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Zip/Postal Code:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Social Media Accounts -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Social Media Accounts</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="twitter" type="Text" blobItem="TWITTER" placeholder="https://twitter.com/Twitter" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Twitter:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="facebook" type="Text" blobItem="FACEBOOK" placeholder="https://www.facebook.com/facebook" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Facebook:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="linkedin" type="Text" blobItem="LINKEDIN" placeholder="https://www.linkedin.com/in/first-last-00000000" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">LinkedIn:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="website" type="Text" blobItem="WEBSITE" placeholder="https://mywebsite.com" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Website:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Immigration and Work Eligibility -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Immigration and Work Eligibility</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="immigration" type="ComboBoxReportItem" blobItem="IMMIGRATION" options="Citizen Permanent Resident|Refugee|International Student|Work Permit Holder" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Canadian Immigration Status:</td>
                    <td class="value" colspan="3">What is your immigration Status in Canada?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="eligibility" type="Select" blobItem="ELIGIBILITY" options="Yes|No|Not sure" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Eligibility to Work in Canada:</td>
                    <td class="value" colspan="3">Are you Eligible to Work in Canada?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Other Obligations -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Other Obligations</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="enrolled" type="Checkbox" blobItem="ENROLLED" blobType="BLOB_ARRAY" options="High School|College/Vocational School|University|Will Not Enroll" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label" style="text-align: left; white-space:normal;" colspan="4">Will you be enrolled in full-time studies at an academic institution (high school, college/vocational school, or university) in the Fall term?<span style="display:inline-block;line-height:1em;" class="label required"></span></td>
                </tr>
                <tr>
                    <td class="value" colspan="4">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="major" type="Text" blobItem="MAJOR" width="250px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label" style="text-align: left; white-space:normal;" colspan="4">If you are enrolled in studies at a post-secondary institution (college/vocational school or university), what is your major or program of study?</td>
                </tr>
                <tr>
                    <td class="value" colspan="4">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="other" type="Radio" blobItem="OTHER" options="Yes|No|Not Sure" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label" style="text-align: left; white-space:normal;" colspan="4">If you are accepted as an intern in the ELITE Program for Black Youth, do you plan to pursue other employment or take courses at any time on Mondays to Fridays, between 8 AM and 5 PM?<span style="display:inline-block;line-height:1em;" class="label required"></span></td>
                </tr>
                <tr>
                    <td class="value" colspan="4">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="other2" type="Radio" blobItem="OTHER2" options="Yes|No|Not Sure" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label" style="text-align: left; white-space:normal;" colspan="4">If you are accepted as an intern in the ELITE Program for Black Youth, do you have any other employment or extra-curricular commitments between May and August (for post-secondary applicants) or between July and August (for high school applicants) that would take you away from work with ELITE Program internship hosts?<span style="display:inline-block;line-height:1em;" class="label required"></span></td>
                </tr>
                <tr>
                    <td class="value" colspan="4">{$item}</td>
                </tr>
                </table>
            ]]>
        </ReportItem>
        
        <!-- Available Projects -->
        <Static>
            <![CDATA[
                <h2 class="required">Available Projects</h2>
                <p>Internship hosts have provided brief descriptions of possible projects. Please review all the internship host project descriptions. Select your top five projects in order of preference. If there are more than five projects that interest you, please state the additional ones in the Comments Box below.</p>
            ]]>
        </Static>
        <ReportItem id="apply" type="EliteProjectSelector" blobItem="PROJECTS" blobType="BLOB_ARRAY" limit="5">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        
        <!-- Attachments -->
        <Static>
            <![CDATA[
                <h2>Attachments</h2>
            ]]>
        </Static>
        <ReportItem id="aspirations" type="Upload" blobItem="ASPIRATIONS" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Professional Aspirations and Academic Interests</h3>
                Please see the Brochure for Interns for a template with requirements and tips.
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="transcript" type="Upload" blobItem="TRANSCRIPT" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Transcript</h3>
                For high school applicants, please submit a full Government transcript, or a full high school transcript obtained from your school. An example of a full Government transcript can be found <a href='{$wgServer}{$wgScriptPath}/data/Example Government Transcript.pdf' target='_blank'>HERE</a>. If you attend a school in the Edmonton Public School system, you or your parent or guardian can visit SchoolZone at https://www.epsb.ca/schools/schoolzone/ to get a copy of your full high school transcript. Please speak with your schoolteacher, guidance counsellor, or school office if you need help.
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="resume" type="Upload" blobItem="RESUME" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Résumé</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="acknowledgment" type="Radio" blobItem="ACKNOWLEDGMENT" options="Yes|No" encrypt="true">
            <![CDATA[
                <h2 class="required">Acknowledgment and Agreement</h2>
                <p>If accepted to the ELITE Program for Black Youth, I will prepare two oral or poster presentations and deliver them at Program workshops.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="comments" type="Textarea" blobItem="COMMENTS" optional="true" encrypt="true">
            <![CDATA[
                <h2>Comments</h2>
                <p>Please provide any comments that you would like to share with the ELITE Program and the Review Committee.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="elite" type="EliteSubmit" />
    </ReportSection>
    <ReportSection id="submit" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <If if="{!=({getProgress(profile)},100)}">
            <![CDATA[
                You have not completed the application.
            ]]>
        </If>
        <Else>
            <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
        </Else>
    </ReportSection>
</Report>
