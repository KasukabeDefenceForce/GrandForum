<?xml version="1.0" encoding="UTF-8" ?>
<Report name="ELITE Intern Application" reportType="RP_ELITE" pdfType="RPTP_ELITE" pdfFiles="ApplicationPDF" year="0" ajax="true" encrypt="true">
    <Permissions>
        <Role role="HQP">
            <SectionPermission id="profile" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <!-- Personal Information -->
    <ReportSection id="profile" type="EditableReportSection" blobSection="PROFILE" name="&lt;span class='en'>Application&lt;/span>&lt;span class='fr'>Demande&lt;/span>" title="&lt;span class='en'>ELITE Intern Application&lt;/span>&lt;span class='fr'>Formulaire de demande pour les stagiaires ELITE&lt;/span>" showProgress="true">
        <If if="{or({==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},)},
                    {==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},Submitted)},
                    {==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},Requested More Info)},
                )}">
            <Static>
                <![CDATA[
                    <b>
                        <span class='en'>Welcome to the Intern Application Portal for the Experiential Learning in Innovation, Technology, and Entrepreneurship (ELITE) Program for Black Youth. Please read our Brochure for Interns before completing your application: <a href="https://www.eliteprogram.ca/program/" target="_blank">DOWNLOAD IT HERE</a>. Personal information submitted through this form will be held as confidential and will be stored, used, and disclosed only to the extent permitted by the Freedom of Information and Protection of Privacy Act, R.S.A. 2000, c. F-25 (as amended).</span>
                        <span class='fr'>Bienvenue au portail pour le Formulaire de demande pour les stagiaires du Programme d’apprentissage expérimental en innovation, technologie et entrepreneuriat (ELITE) pour la jeunesse noire. Veuillez lire notre brochure pour les stagiaires avant de compléter votre formulaire : TÉLÉCHARGEZ-LE ICI. Les renseignements personnels soumis dans le formulaire resteront confidentiels et seront stockés, utilisés et divulgués uniquement par ce qui est permis par la Loi sur la protection des renseignements personnels, L.R.A. 2000, ch. F-25 (amendée).</span>
                    </b>
                ]]>
            </Static>
            <If if="{==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},Requested More Info)}">
                <![CDATA[
                    <div class="info">
                        <b>{getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)}</b><br />
                        {getText(RP_ELITE, PROFILE, COMMENTS, 0, {$user_id}, 0)}
                    </div>
                ]]>
            </If>
            <Static>
                <![CDATA[
                    <p>
                        <span class='en'>All items with a <span style="color:red;">*</span> require mandatory responses</span>
                        <span class='fr'>Tous les éléments ayant un * nécessite obligatoirement une réponse</span>
                    </p>
                    <table>
                        
                ]]>
            </Static>
            <ReportItem id="region" type="Select" blobItem="REGION" options="|Edmonton|Ottawa" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required" style="width: 100px;"><span class='en'>Region</span><span class='fr'>Région</span>:</td>
                        <td class="value" colspan="3">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="last_name" type="Text" blobItem="LAST_NAME" encrypt="true">
                <![CDATA[
                    <tr>
                        <td colspan="4"><h2 style="margin-top:0;"><span class='en'>Personal Information</span><span class='fr'>Information personnelle</span></h2></td>
                    </tr>
                    <tr>
                        <td class="label required" style="width: 100px;"><span class='en'>Last Name</span><span class='fr'>Nom de famille</span>:</td>
                        <td class="value" colspan="3">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="first_name" type="Text" blobItem="FIRST_NAME" encrypt="true">
                <![CDATA[
                    <tr>
                        <td class="label required"><span class='en'>First Name</span><span class='fr'>Prénom</span>:</td>
                        <td class="value" colspan="3">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="middle_name" type="Text" blobItem="MIDDLE_NAME" optional="true" encrypt="true">
