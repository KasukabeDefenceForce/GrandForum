                    <tr>
                        <td class="label tooltip required" title="Name of the educational institution"><span class='en'>Institution Name</span><span class='fr'>Nom de l’établissement</span>:</td>
                        <td class="value" colspan="3">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="institution_city" type="Text" blobItem="INSTITUTION_CITY" encrypt="true">
