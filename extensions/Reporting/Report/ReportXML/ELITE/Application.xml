<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Report" reportType="RP_ELITE" pdfType="RPTP_ELITE" pdfFiles="Application" year="0" ajax="true" encrypt="true">
    <Permissions>
        <Role start="REPORTING_CYCLE_START" end="REPORTING_CYCLE_END" role="NI">
            <SectionPermission id="profile" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
            <SectionPermission id="projects" permissions="rw" />
        </Role>
    </Permissions>
    <!-- Personally identifying information -->
    <ReportSection id="profile" type="EditableReportSection" blobSection="PROFILE" name="Profile" title="Profile" showProgress="true">
        <If if="{==({getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)},Requested More Info)}">
            <![CDATA[
                <div class="info">
                    <b>{getText(RP_ELITE, PROFILE, STATUS, 0, {$user_id}, 0)}</b><br />
                    {getText(RP_ELITE, PROFILE, COMMENTS, 0, {$user_id}, 0)}
                </div>
            ]]>
        </If>
        <Static>
            <![CDATA[
                <table>
                    <tr>
                        <td colspan="4"><h2 style="margin-top:0;">Personally identifying information</h2></td>
                    </tr>
            ]]>
        </Static>
        <ReportItem id="last_name" type="Text" blobItem="LAST_NAME" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Last Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="first_name" type="Text" blobItem="FIRST_NAME" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">First Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="middle_name" type="Text" blobItem="MIDDLE_NAME" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Middle Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="birthdate" type="Calendar" blobItem="BIRTHDATE" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Date of Birth:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Self identifying Section -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Self identifying Section</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="gender" type="Select" blobItem="GENDER" options="Male|Female|Non-binary|Other|I prefer not to say" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Gender:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="ethnic" type="Checkbox" blobItem="ETHNIC" blobType="BLOB_ARRAY" options="Black|White|Indigenous|South Asian|Chinese Filipino Arab Southeast Asian|West Asian|Other(s)|I prefer not to say" labels="Black|White|Indigenous (North American, Central American, South American Indigenous peoples)|South Asian (e.g., East Indian, Pakistani, Sri Lankan, etc.)|Chinese Filipino Arab Southeast Asian (e.g., Vietnamese, Cambodian, Laotian, Thai, etc.)|West Asian (e.g., Iranian, Afghan, etc.) Korean Japanese|Other(s)|I prefer not to say" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Ethnic Group:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Education -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Education</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="education" type="Select" blobItem="EDUCATION" options="High-school|Post-secondary|Transitioning from High School to Post secondary|Other" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Education:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="enrollment" type="Select" blobItem="ENROLLMENT" options="High School|College/Vocational School|University|WILL NOT ENROLL" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Enrollment in Fall:</td>
                    <td class="value" colspan="3">Will you be enrolled in full-time studies at an academic institution (high school, college/vocational school, or university) in the Fall term?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_name" type="Text" blobItem="INSTITUTION_NAME" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="Name of the educational institution">Institution Name:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_city" type="Text" blobItem="INSTITUTION_CITY" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">City:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution_prov" type="Text" blobItem="INSTITUTION_PROV" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Province/State:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="language" type="Select" blobItem="LANGUAGE" options="French|English" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Official Languages:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Contact Information -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Contact Information</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="address1" type="Text" blobItem="ADDRESS1" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="Street Name and number">Address Line 1:</td>
                    <td class="value" style="width:200px">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="email" type="Text" blobItem="EMAIL" encrypt="true">
            <![CDATA[
                    <td class="label required" style="width:1px;">E-mail:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="address2" type="Text" blobItem="ADDRESS2" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="House, Apt, Suite">Address Line 2:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="phone" type="Text" blobItem="PHONE" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Phone number of the individual">Cellphone Number:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="city" type="Text" blobItem="CITY" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="City">City:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="contact_name" type="Text" blobItem="CONTACT_NAME" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Name of the individual's emergency contact">Emergency Contact Name:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="prov" type="Text" blobItem="PROV" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label tooltip" title="Province">Province/State:</td>
                    <td class="value">{$item}</td>
            ]]>
        </ReportItem>
        <ReportItem id="contact" type="Text" blobItem="CONTACT" encrypt="true">
            <![CDATA[
                    <td class="label tooltip required" title="Phone number of the individual's emergency contact">Emergency Contact:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="zip" type="Text" blobItem="ZIP" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Zip/Postal Code:</td>
                    <td class="value">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Social Media Accounts -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Social Media Accounts</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="twitter" type="Text" blobItem="TWITTER" placeholder="https://twitter.com/Twitter" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Twitter:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="facebook" type="Text" blobItem="FACEBOOK" placeholder="https://www.facebook.com/facebook" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Facebook:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="linkedin" type="Text" blobItem="LINKEDIN" placeholder="https://www.linkedin.com/in/first-last-00000000" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">LinkedIn:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="website" type="Text" blobItem="WEBSITE" placeholder="https://mywebsite.com" width="315px" optional="true" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Website:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Immigration and Work Eligibility -->
        <Static>
            <![CDATA[
                <tr>
                    <td colspan="4"><h2>Immigration and Work Eligibility</h2></td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="immigration" type="ComboBoxReportItem" blobItem="IMMIGRATION" options="Citizen Permanent Resident|Refugee|International Student|Work Permit Holder" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Canadian Immigration Status:</td>
                    <td class="value" colspan="3">What is your immigration Status in Canada?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="eligibility" type="Select" blobItem="ELIGIBILITY" options="Yes|No|Not sure" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">Eligibility to Work in Canada:</td>
                    <td class="value" colspan="3">Are you Eligible to Work in Canada?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="streams" type="Select" blobItem="STREAMS" options="Working with an internship host with a Coaching series|Working with an ELITE Industry or Government Partner" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label required">ELITE Streams:</td>
                    <td class="value" colspan="3">{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <ReportItem id="obligations" type="Select" blobItem="OBLIGATIONS" options="Yes|No|Not Sure" encrypt="true">
            <![CDATA[
                <tr>
                    <td class="label">Other Obligations:</td>
                    <td class="value" colspan="3">If you are accepted as an intern in the ELITE Program for Black Youth, do you plan to pursue other employment or take courses at any time on Mondays to Fridays, between 8 AM and 5 PM?{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        
        <!-- Attachments -->
        <Static>
            <![CDATA[
                </table>
                <h2>Attachments</h2>
            ]]>
        </Static>
        <ReportItem id="aspirations" type="Upload" blobItem="ASPIRATIONS" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Professional Aspirations and Academic Interests</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="transcript" type="Upload" blobItem="TRANSCRIPT" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Transcript</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="resume" type="Upload" blobItem="RESUME" mimeType="application/pdf" fileSize="5" blobType="BLOB_RAW" encrypt="true">
            <![CDATA[
                <h3 class="required">Resume</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="comments" type="Textarea" blobItem="COMMENTS" optional="true" encrypt="true">
            <![CDATA[
                <h3>Comments</h3>
                <p>Comments that the candidate may have about the application and/or
 the program.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="elite" type="EliteSubmit" />
    </ReportSection>
    <ReportSection id="submit" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>
    <ReportSection id="projects" type="EditableReportSection" blobSection="PROJECTS" name="Projects" title="Projects" renderpdf="false">
        <Static>
            <![CDATA[
                <h3>Choose the projects you wish to apply for.</h3>
                <table id='apply_table' class='wikitable' width='100%'>
                    <thead>
                        <tr>
                            <th style='width:100px;'>Apply</th>
                            <th style='width:100px;'>Date</th>
                            <th style='width:50%;'>Company Name</th>
                            <th style='width:50%;'>Position</th>
                        </tr>
                    </thead>
                    <tbody>
            ]]>
        </Static>
        <ReportItemSet type="ElitePostings">
            <ReportItem id="apply" type="Checkbox" blobItem="APPLY" blobType="BLOB_ARRAY" options="{getElitePostingField(id)}" labels="">
                <![CDATA[
                    <tr>
                        <td align="center"><div style='margin-left:2px;'>{$item}</div></td>
                ]]>
            </ReportItem>
            <Static>
                <![CDATA[
                        <td style='white-space:nowrap;'><span style='display:none;'>{getElitePostingField(created)}</span>{time2date({getElitePostingField(created)})}</td>
                        <td>{getElitePostingField(title)}</td>
                        <td>{getElitePostingField(companyName)}</td>
                    </tr>
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                    </tbody>
                </table>
            ]]>
        </Static>
    </ReportSection>
</Report>
