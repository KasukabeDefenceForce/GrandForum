                <![CDATA[
                    <tr>
                        <td colspan="4"><h2><span class='en'>Contact Information</span><span class='fr'>Coordonnées</span></h2></td>
                    </tr>
                ]]>
            </Static>
            <ReportItem id="address1" type="Text" blobItem="ADDRESS1" encrypt="true">
