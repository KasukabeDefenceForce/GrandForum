                    <tr>
                        <td class="label required"><span class='en'>Province/State</span><span class='fr'>Province/État</span>:</td>
                        <td class="value" colspan="3">{$item}</td>
                    </tr>
                ]]>
            </ReportItem>
            
            <!-- Contact Information -->
