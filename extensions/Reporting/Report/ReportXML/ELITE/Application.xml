                                if(wgLang == 'fr'){
                                    $("select[name=ApplicationDemande_enrollment] option[value='High School']").text('École secondaire');
                                    $("select[name=ApplicationDemande_enrollment] option[value='College/Vocational School']").text('Collège/école vocationnelle');
                                    $("select[name=ApplicationDemande_enrollment] option[value='University']").text('Université');
                                    $("select[name=ApplicationDemande_enrollment] option[value='WILL NOT ENROLL']").text("NE S'INSCRIRE PAS");
                                }
                            </script>
                        </td>
                    </tr>
                ]]>
            </ReportItem>
            <ReportItem id="institution_name" type="Text" blobItem="INSTITUTION_NAME" encrypt="true">
